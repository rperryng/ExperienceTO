<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 bus-sign-head">
      <div class="logo">
        <img src="/client/assets/images/logomap.png" alt="logo">
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-2 col-xs-offset-3">
      <div class="circle-bar bg-orange circle-icon">
        <i class="fa fa-compass"></i>
      </div>
    </div>
    <div class="col-xs-2">
      <div class="circle-bar bg-orange circle-icon">
        <i class="fa fa-users"></i></div>
      </div>
    <div class="col-xs-2">
      <div class="circle-bar bg-orange circle-icon">
        <i class="fa fa-map-marker"></i></div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="signupBusiness-view" ng-app="signupBusiness" ng-controller="SignupBusinessController as signupBusiness">
        <form ng-show="!singupBusiness.sent">
          <div class="form-group">
            <label>Company Name:</label>
            <input class="form-control" type="text" placeholder="Company name" ng-model="signupBusiness.name">
          </div>
          <div class="form-group">
            <label>E-mail:</label>
            <input class="form-control" type="text" placeholder="your@email.com" ng-model="signupBusiness.email">
          </div>
          <div class="form-group">
            <label>Phone</label>
            <input class="form-control" type="tel" placeholder="" ng-model="signupBusiness.phone">
          </div>
          <div class="form-group">
            <label>Address</label>
            <input class="form-control" type="tel" placeholder="123 Yonge Street" ng-model="signupBusiness.phone">
          </div>
          <div class="form-group">
            <label>Postal Code</label>
            <input class="form-control" type="tel" placeholder="1A2 B3C" ng-model="signupBusiness.phone">
          </div>
          <div class="form-group">
            <label>Company Logo</label>
            <input class="form-file" type="file" ng-file-select="signupBusiness.onFileSelect($file)">
          </div>
          <button class="btn btn-primary" type="submit" ng-click="signupBusiness.submit()">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
